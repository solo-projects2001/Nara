{
  "type": "object",
  "required": ["system_type", "components"],
  "properties": {
    "system_type": {
      "type": "string",
      "enum": ["python_script", "pipeline", "multi_component"]
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "role", "entrypoint", "contracts"],
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "entrypoint": { "type": "string" },
          "contracts": {
            "type": "object",
            "required": ["input", "output"],
            "properties": {
              "input": { "type": "string" },
              "output": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
